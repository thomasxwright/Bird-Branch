            <option value="WY">Wyoming</option>
        </select>
    </section>
    <section>
        <ul>
            <% birdData.forEach( el=> { %>
                <li class='bird' data-id='<%=el._id%>'>
                    <span class='name'>
                        <%= el.primaryCommonName %>
                    </span>
                    <a href="/sightings/<%=el._id%>">Sightings</a>
                    <span class='del'> Delete </span>
                </li>
                <% }) %>
        </ul>
    </section>
    <form action="/birds/submitBird" method="POST">
        <input type="text" placeholder="common name" name="commonName">
        <input type="text" placeholder="scientific name" name="scientificName">
        <input type="submit">
    </form>

